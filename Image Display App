        <script>
            function showimage(){
                document.getElementById("image").style.display="block";
            }
        </script>
    

            <div id="myimage">
                <img src="[insert_image_here] alt="[description_here]" style="display:none" id="image"> 
                </div>
            <button type="button" name="button" onclick="showimage()">
                Display Image
            </button>

            
